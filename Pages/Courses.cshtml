@page
@model ListaCursos.Pages.CoursesModel
@{
    ViewData["Title"] = "Courses";
}

<h2>Courses</h2>
<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" asp-for="Search" placeholder="Buscar..." />
            <button class="btn btn-primary">Search</button>
        </div>
    </div>
</form>
<table class="table">
    <tr>
        <th scope="col">Id</th>
        <th scope="col">Name</th>
        <th scope="col">Author</th>
        <th scope="col">Descripction</th>
    </tr>
    @foreach (var course in Model.Courses)
    {
        <tr>
            <td>@course.Id</td>
            <td>@course.Name</td>
            <td>@course.Author</td>
            <td>@course.Description</td>
            <td>
                <a class="btn btn-link" asp-page="Details" asp-route-id="@course.Id">
                    Ver detalles
                </a>
            </td>
        </tr>
    }
</table>
