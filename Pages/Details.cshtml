@page
@model ListaCursos.Pages.DetailsModel
@{
    ViewData["Title"] = "Details";
}

<h2>@Model.Course.Name</h2>
<div class="card">
    <div class="card-header">
        Descripción
    </div>
    <div class="card-text">
        @Model.Course.Description
    </div>
</div>
<div class="card">
    <div class="card-header">
        Autor
    </div>
    <div class="card-text">
        @Model.Course.Author
    </div>
</div>
<div class="card">
    <div class="card-header">
        Dirección
    </div>
    <div class="card-text">
        @Model.Course.Uri
    </div>
</div>

<div>
    <a asp-page="Courses" class="btn btn-success">Ver la lista completa de cursos</a>
</div>
